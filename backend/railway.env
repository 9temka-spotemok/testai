# Railway Production Environment Variables
# Этот файл содержит минимальные переменные для запуска на Railway

# Application
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=railway-production-secret-key-2024-change-this

# Database (Railway предоставит эти переменные автоматически)
# DATABASE_URL будет установлена Railway автоматически
# REDIS_URL будет установлена Railway автоматически

# Celery (используем те же Redis URL что и для основного приложения)
# CELERY_BROKER_URL будет установлена Railway автоматически
# CELERY_RESULT_BACKEND будет установлена Railway автоматически

# CORS - настройки для Netlify фронтенда
ALLOWED_HOSTS=https://short-news-ai.netlify.app,https://web-production-6bf5.up.railway.app
# Разрешить Netlify превью-домены и вариации поддоменов (регулярное выражение)
ALLOWED_ORIGIN_REGEX=https://.*\.netlify\.app

# Frontend URLs для Netlify
FRONTEND_BASE_URL=https://short-news-ai.netlify.app
FRONTEND_SETTINGS_URL=https://short-news-ai.netlify.app/settings
FRONTEND_DIGEST_SETTINGS_URL=https://short-news-ai.netlify.app/settings/digest

# Scraping
SCRAPER_USER_AGENT=shot-news-bot/1.0 (+https://t.me/short_news_sender_bot)
SCRAPER_DELAY=5.0
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_BACKOFF=1.5
SCRAPER_RATE_LIMIT_REQUESTS=6
SCRAPER_RATE_LIMIT_PERIOD=60
SCRAPER_CONFIG_PATH=./config/scraper_sources.yml
SCRAPER_HEADLESS_ENABLED=false
SCRAPER_PROXY_URL=
SCRAPER_SNAPSHOTS_ENABLED=true
SCRAPER_SNAPSHOT_DIR=storage/raw_snapshots
SCRAPER_DETAIL_ENRICHMENT_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100

# Logging
LOG_LEVEL=INFO

# Telegram Bot настройки
TELEGRAM_BOT_TOKEN=8358550051:AAFVEGVvywc3n636YgYnHFT56JAbYgGIKLA

# Optional APIs (можно добавить позже)
# OPENAI_API_KEY=your-openai-api-key
# TWITTER_API_KEY=your-twitter-api-key
# GITHUB_TOKEN=your-github-token

# Database connection settings for Railway
# These help with connection stability
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=300
DB_POOL_PRE_PING=true