# AI Competitor Insight Hub - Environment Variables

# Application
ENVIRONMENT=development
DEBUG=true
RUN_MIGRATIONS=true
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://shot_news:shot_news_dev@localhost:5432/shot_news

# Redis
REDIS_URL=redis://localhost:6379

# OpenAI API
# Required for onboarding: AI descriptions for companies and competitors
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Twitter API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# GitHub API
GITHUB_TOKEN=your-github-token-here

# Reddit API
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret

# Email
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@shot-news.com

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHANNEL_ID=@your_channel_name

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_DEDUP_TTL_SECONDS=900
CELERY_METRICS_ENABLED=true
CELERY_METRICS_EXPOSE_SERVER=true
CELERY_METRICS_HOST=0.0.0.0
CELERY_METRICS_PORT=9464
CELERY_METRICS_NAMESPACE=shot_news
CELERY_METRICS_DURATION_BUCKETS=0.1,0.5,1,2,5,10,30,60,120,300
CELERY_OTEL_ENABLED=false

# Scraping
SCRAPER_USER_AGENT=shot-news-bot/1.0 (+https://shot-news.com/bot)
SCRAPER_DELAY=5.0
SCRAPER_TIMEOUT=30
SCRAPER_MAX_RETRIES=3
SCRAPER_RETRY_BACKOFF=1.5
SCRAPER_RATE_LIMIT_REQUESTS=6
SCRAPER_RATE_LIMIT_PERIOD=60
SCRAPER_CONFIG_PATH=./config/scraper_sources.yml
SCRAPER_HEADLESS_ENABLED=false
SCRAPER_PROXY_URL=
SCRAPER_SNAPSHOTS_ENABLED=true
SCRAPER_SNAPSHOT_DIR=storage/raw_snapshots
SCRAPER_DETAIL_ENRICHMENT_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100

# Subscription settings (for development)
# Set DISABLE_SUBSCRIPTION_CHECK=true to disable subscription checks in dev
DISABLE_SUBSCRIPTION_CHECK=false
# Comma-separated list of email addresses that should have unlimited trial access
# Example: SUBSCRIPTION_DEV_USERS=dev@example.com,test@example.com
SUBSCRIPTION_DEV_USERS=

# Logging
LOG_LEVEL=INFO
